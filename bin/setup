#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install"

  # puts "\n== Copying sample files =="
  # unless File.exist?("config/database.yml")
  #   system "cp config/database.yml.sample config/database.yml"
  # end

  puts "\n== Preparing database =="
  system "bin/rake db:setup"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  puts "\n== Setting up environment =="

  puts "Your Desk.com subdomain:"
  desk_name = gets.chomp

  puts "Your Desk.com consumer key:"
  desk_key = gets.chomp

  puts "Your Desk.com consumer secret:"
  desk_secret = gets.chomp

  puts "Your Desk.com access token:"
  desk_token = gets.chomp

  puts "Your Desk.com access token secret:"
  desk_token_secret = gets.chomp

  File.open('.env', 'w+') do |f|
    f.write("DESK_NAME=#{desk_name}\n")
    f.write("DESK_API_CONSUMER_KEY=#{desk_key}\n")
    f.write("DESK_API_CONSUMER_SECRET=#{desk_secret}\n")
    f.write("DESK_ACCESS_TOKEN=#{desk_token}\n")
    f.write("DESK_ACCESS_TOKEN_SECRET=#{desk_token_secret}")
  end
end
